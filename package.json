{
  "name": "plug-and-play-companion",
  "version": "1.0.0",
  "main": "server.js",
  "bin": "bin/server.js",
  "src": "bin/server.js",
  "repository": "git@github.com:magnificus/plug-and-play-companion.git",
  "author": "Tobias Elinder <tobiaselinder@gmail.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@types/node-fetch": "2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "2",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@types/xml2js": "^0.4.11",
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "yarn tsc",
    "start": "yarn tsc && node --experimental-modules bin/server.js",
    "package": "pkg . ",
    "package-unix": "pkg . --targets=['latest-linux-arm64']"
  },
  "pkg": {
    "scripts": "bin/**/*.js",
    "assets": "views/**/*",
    "targets": [
      "latest-win-x64"
    ],
    "outputPath": "dist"
  }
}
